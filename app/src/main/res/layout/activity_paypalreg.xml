<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:weightSum="1"
tools:context="test.testpaypal.paypalreg">


<ImageView
    android:id="@+id/imageView"
    android:layout_width="match_parent"
    android:layout_height="158dp"
    app:srcCompat="@drawable/pp" />

<TextView
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Please Proceed For payment"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
    android:textColorLink="@color/colorPrimary"
    android:textSize="16dp" />

<Button
    android:id="@+id/order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@android:dimen/notification_large_icon_height"
    android:layout_marginRight="@android:dimen/notification_large_icon_width"
    android:layout_marginTop="@android:dimen/thumbnail_width"
    android:onClick="pay"
    android:text="Pay 10 $" />
<TextView
    android:id="@+id/respose"
    android:background="@color/colorAccent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="30dp"/>

</LinearLayout>